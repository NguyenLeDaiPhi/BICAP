      <a class="navbar-brand px-4 py-3 m-0" href="/dashboard">
        <div class="d-flex align-items-center">
          <i class="material-symbols-rounded text-success me-2" style="font-size: 28px;">agriculture</i>
          <span class="ms-1 text-sm text-dark font-weight-bolder">BICAP Farm</span>
        </div>
      </a>
    </div>
    <hr class="horizontal dark mt-0 mb-2">
    <div class="collapse navbar-collapse w-auto show" id="sidenav-collapse-main" style="display: block !important; visibility: visible !important; opacity: 1 !important;">
      <ul class="navbar-nav" style="display: block !important; visibility: visible !important;">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">
            <i class="material-symbols-rounded">dashboard</i>
            <span class="nav-link-text">Dashboard</span>
