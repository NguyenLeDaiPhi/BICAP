  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
  <link id="pagestyle" href="/assets/css/material-dashboard.css?v=3.2.0" rel="stylesheet" />
  <style>
    /* Navigation Styles */
    .sidenav {
      min-height: 100vh;
    }
    
    .sidenav .navbar-nav {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .sidenav .nav-item {
      margin-bottom: 4px;
    }
    
    .sidenav .nav-link {
      display: flex !important;
      align-items: center;
      padding: 12px 16px;
      margin: 6px 12px;
      border-radius: 12px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      color: #344767 !important;
      font-weight: 500;
      position: relative;
      text-decoration: none;
      width: auto;
      min-height: 44px;
    }
    
    .sidenav .nav-link i {
      font-size: 20px !important;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 12px;
      opacity: 0.7;
      transition: all 0.3s ease;
      flex-shrink: 0;
    }
    
    .sidenav .nav-link .nav-link-text {
      font-size: 14px;
      transition: all 0.3s ease;
      white-space: nowrap;
    }
    
    /* Inactive nav link hover */
    .sidenav .nav-link:not(.active):hover {
      background-color: rgba(67, 160, 71, 0.08) !important;
      color: #43A047 !important;
      transform: translateX(4px);
    }
    
    .sidenav .nav-link:not(.active):hover i {
      opacity: 1;
      color: #43A047;
    }
    
    /* Active nav link */
    .sidenav .nav-link.active {
      background: linear-gradient(135deg, #43A047 0%, #2E7D32 100%) !important;
      color: #ffffff !important;
      box-shadow: 0 4px 12px rgba(67, 160, 71, 0.3);
    }
    
    .sidenav .nav-link.active i {
      opacity: 1;
      color: #ffffff !important;
    }
    
    .sidenav .nav-link.active .nav-link-text {
      font-weight: 600;
      color: #ffffff !important;
    }
    
    /* Account section divider */
    .sidenav .nav-item.mt-3 h6 {
      padding: 8px 16px;
      margin: 16px 12px 8px 12px;
      font-size: 11px;
      letter-spacing: 0.5px;
      color: #7b809a;
      font-weight: 600;
    }
    
    /* Ensure sidenav is visible */
    #sidenav-collapse-main {
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
    }
    
    #sidenav-collapse-main.show {
      display: block !important;
    }
    
    .sidenav .navbar-nav {
      display: block !important;
    }
    
    .sidenav-footer {
      position: absolute;
      bottom: 0;
      width: 100%;
      padding-bottom: 20px;
    }
    
    /* Make sure all nav items are visible */
    .sidenav .nav-item {
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
    }
    
    /* Fix for Material Dashboard override */
    .sidenav .nav-link.text-dark {
      color: #344767 !important;
    }
  </style>
</head>

<body class="g-sidenav-show bg-gray-100">
